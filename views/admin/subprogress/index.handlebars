<div class="row">
    <div class="col-xs-12">
        <!-- /.box -->

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">All SUB User Progresses</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x:auto;">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Steps</th>
                            <th>Date</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody>

                        {{#each subprogress}}
                        <tr>
                            <td><img height="70px" width="70px" class="img-responsive" src="{{detail.user_img}}" alt="">
                            </td>
                            <td>{{detail.user_name}}</td>
                            <td>{{distance}}</td>
                            <td>{{generateTime date 'MMMM Do YYYY'}}</td>

                            <td>
                                <form action="/admin/subprogress/{{id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">DELETE</button>
                                </form>
                            </td>

                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
