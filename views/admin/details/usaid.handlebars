<div class="row">
    <div class="col-xs-12">
        <!-- /.box -->

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">All USAID Users</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x:auto;">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>User Image</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each details}}
                        <tr>
                            <td>{{user_name}}</td>
                            <td><img height="100px" width="100px" class="img-responsive" src="{{user_img}}" alt=""></td>

                            <td>
                                <form action="/admin/details/usaid/{{id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">DELETE</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
