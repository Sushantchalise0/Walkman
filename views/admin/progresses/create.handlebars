<h1>Add User Progress</h1>

{{#each errors}}

    <div class="alert alert-danger">
    {{message}}
    </div>
{{/each}}

<form action="/admin/progresses/create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="distance"> Recycled </label>
        <input type="text" name="distance" class="form-control" id="distance" placeholder="Amount Recycled in KG">
    </div>

    {{!-- <div class="form-group">
        <label for="calorie"> Calorie </label>
        <input type="calorie" name="calorie" class="form-control" id="calorie" placeholder="Enter distance">
    </div> --}}

<div class="form-group">
        <label for="detail"> user </label>
        <select name="detail" id="status" class="form-control">
        
         {{#each details}}
            <option value='{{id}}'>{{user_name}}</option>
            {{/each}}
        </select>
    </div>

    <button type="submit" class="btn btn-primary"> CREATE </button>

</form>