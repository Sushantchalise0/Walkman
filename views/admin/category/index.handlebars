<div class="row">
    <div class="col-xs-12">
        <!-- /.box -->

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">All Categories</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x:auto;">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Cat Img</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            <td>{{cat_name}}</td>
                            <td><img height="200px" width="100px" class="img-responsive" src="{{img}}" alt=""></td>
                            <td>
                                <a href="/admin/category/edit/{{id}}" class="btn btn-info">Edit</a>
                                <form action="/admin/category/{{id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">DELETE</button>
                                </form>
                                <a href="/admin/category/products/{{id}}" class="btn btn-info">PRODUCTS</a>
                            </td>

                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
