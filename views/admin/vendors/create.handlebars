<h1>ADD VENDORS HERE</h1>

{{#each errors}}

    <div class="alert alert-danger">
    {{message}}
    </div>
{{/each}}

<form action="/admin/vendors/create" method="post" enctype="multipart/form-data">
    <center><h5><label> Vendor Details </label></h5></center>
    
     <div class="form-group">
        <label for="VendorName"> VendorName </label>
        <input type="text" name="vendor_name" class="form-control" id="vendorname" placeholder="Enter Vendorname">
    </div>
    <div class="form-group">
        <label for="category"> Category </label>
        <select name="cat_id" id="cat_id" class="form-control">
        
         {{#each categories}}
            <option value='{{id}}'>{{cat_name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="VendorAddress"> VendorAddress </label>
        <input type="text" name="vendor_address" class="form-control" id="vendoradd" placeholder="Enter Address">
    </div>

    <div class="form-group">
        <label for="VendorwEB"> VendorWeb </label>
        <input type="url" name="vendor_web" class="form-control" id="vendor_web" placeholder="Enter Website URL">
    </div>

    <div class="form-group">
        <label for="VendorFb"> VendorFbID </label>
        <input type="url" name="vendor_fb" class="form-control" id="vendor_fb" placeholder="Enter FB URL">
    </div>
    
    <div class="form-group">
        <label for="VendorInsta"> VendorInsta </label>
        <input type="url" name="vendor_insta" class="form-control" id="vendor_insta" placeholder="Enter INSTA">
    </div>

    <div class="form-group">
        <label for="VendorDisc"> VendorDiscription </label>
        <input type="text" name="vendor_disc" class="form-control" id="vendor_disc" placeholder="Enter Discription">
    </div>

    <div class="form-group">
        <label for="VendorPhone"> VendorPhone </label>
        <input type="text" name="vendor_phone" class="form-control" id="vendor_phone" placeholder="Enter Phone">
    </div>

      <div class="form-group">
        <label for="longitude"> Longitude </label>
        <input type="text" name="longitude" class="form-control" id="longitude" placeholder="Enter longitude">
    </div>
    <div class="form-group">
        <label for="lattitude"> Lattitude </label>
        <input type="text" name="lattitude" class="form-control" id="lattitude" placeholder="Enter lattitude">
    </div>
     <div class="form-group">
        <label for="file"> Upload Icon </label>
        <input type="file" name="vendor_ic" class="form-control">
    </div>
    
  <div class="form-group">
        <label for="status" class="form-check-label"> 
        <input type="checkbox" name="status" class="form-check-input" id="status" >
        Status
        </label>
    </div>


    <button type="submit" class="btn btn-primary"> CREATE </button>

</form>