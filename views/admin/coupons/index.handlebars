<div class="row">
    <div class="col-xs-12">
        <!-- /.box -->

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">All User Coupons</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x:auto;">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Product</th>
                            <th>ProductImg</th>
                            <th>VendorName</th>
                            <th>QR</th>
                            <th>CreatedDate</th>
                            <th>RedeemedDate</th>
                            <th>Status</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>

                        {{#each coupons}}
                        <tr>

                            <td>{{detail.user_name}}</td>
                            <td>{{productID.name}}</td>
                            <td><img height="70px" width="70px" class="img-responsive" src="{{productID.img}}" alt="">
                            </td>
                            <td>{{vendorID.vendor_name}}</td>
                            <td>{{qrKey}}</td>
                            <td>{{generateTime created_date 'MMMM Do YYYY'}}</td>
                            <td>{{generateTime redeemed_date 'MMMM Do YYYY'}}</td>
                            <td>
                                {{v_status}}
                                {{!-- {{#if (v_status ='true')}}
                        {{return true}}
                        {{else }}
                        {{return false}}
                        {{/if}} --}}
                            </td>
                            <td>
                                <form action="/admin/coupons/{{id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">DELETE</button>
                                </form>
                            </td>


                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
{{!-- <script type="text/javascript" src="/js/jquery/jquery.min.js"></script> --}}
<!--jquery is must for data table for search and pages-->
<script src="/wlkasset/bower_components/jquery/dist/jquery.min.js"></script>
<!-- page script -->
<script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    });
</script>