<h1>ADD statements HERE</h1>

{{#each errors}}

    <div class="alert alert-danger">
    {{message}}
    </div>
{{/each}}

<form action="/admin/statements/create" method="post">
    <center><h5><label> Statement Details </label></h5></center>
    
      <div class="form-group">
        <label for="vendorname"> VendorName </label>
        <select name="vendor_id" id="vendor_id" class="form-control">
        
         {{#each vendors}}
            <option value='{{id}}'>{{vendor_name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="productname"> ProductName </label>
        <select name="product_id" id="product_id" class="form-control">
        
         {{#each products}}
            <option value='{{id}}'>{{name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="redeemedDate"> redeemedDate </label>
        <input type="text" name="redeemedDate" class="form-control" id="redeemedDate" placeholder="Enter redeemedDate">
    </div>
      <div class="form-group">
        <label for="redeemedTime"> redeemedTime </label>
        <input type="text" name="redeemedTime" class="form-control" id="redeemedTime" placeholder="Enter redeemedTime">
    </div>
    <div class="form-group">
        <label for="totalDue"> totalDue </label>
        <input type="text" name="due" class="form-control" id="due" placeholder="Enter totalDue">
    </div>

    <button type="submit" class="btn btn-primary"> CREATE </button>

</form>